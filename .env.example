# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO

# IRIS Configuration
IRIS_HOME_DIR=/usr/irissys
IRIS_CPF_PATH=/usr/irissys/iris.cpf
IRIS_PROCESS_NAME=iris

# External Integration
EXTERNAL_ENDPOINT_URL=http://localhost:8000/api/messages
EXTERNAL_ENDPOINT_TIMEOUT=30
PUBLISH_RETRY_MAX_ATTEMPTS=3
PUBLISH_RETRY_BACKOFF_FACTOR=2

# Tool Configuration
TOOL_EXECUTION_TIMEOUT=60
TOOL_DRY_RUN_DEFAULT=false

# Transport Configuration
TRANSPORT_TYPE=http
FILE_TRANSPORT_OUTPUT_DIR=./output
FILE_TRANSPORT_INPUT_DIR=./input

# Message Generation
MESSAGE_GENERATOR_TEMPERATURE=0.7
MESSAGE_GENERATOR_MODEL=gpt-4
MESSAGE_CLASSIFIER_MODEL=gpt-3.5-turbo

# Restart Configuration
IRIS_RESTART_USER_WAIT_TIMEOUT=60
IRIS_RESTART_SHUTDOWN_TIMEOUT=120
IRIS_RESTART_STARTUP_TIMEOUT=60
